<%- include('../header.ejs') %>

<br><br>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h3 class="alert-course alert-success text-center">DISPLAY</h3>

        <table class="table table-striped  table-responsive table-info">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Username</th>
              <th scope="col">Course</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>

            
              <% var i=1 %>
            
            <% data.forEach((item)=>{ %>
              <tr>
                <td>
                  <%= i++ %>
                </td>
                <td>
                  <%= item.username %>
                </td>
                <td><%= item.course %>
                </td>
                <td>
                  <a href="/ViewCourse/<%= item._id %>" class="btn btn-danger btn-sm action-btn"><i class="fa-solid fa-eye"></i></a>&nbsp;&nbsp;
                  <a href="/EditCourse/<%= item._id %>" class="btn btn-info btn-sm action-btn" ><i class="fa-regular fa-pen-to-square"></i></a>

                  
                </td>
              </tr>
              <% })%>
          </tbody>
        </table>
        
        <center>
          <a href="/course" class="btn btn-course btn-warning">Back To The Dashboard</a>
        </center>
        <br>
      </div>
    </div>
  </div>

  <%- include('../footer.ejs') %>