<%- include('../header.ejs') %>
    <!-- Banner Section  -->
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>

        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/banner1.PNG" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/banner2.jpg" class="d-block w-100" alt="...">
            </div>

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!-- Banner Section End  -->

    <!-- heading section  -->
    <div class="section-title">
        <h2>Welcome <%= n %>
        </h2>

        <h2>Register Your Course</h2>
        <p>Course Registration means the official recording of a student's name to study a course or
            courses.
        </p>
    </div>
    <!-- heading section  -->

    <!-- cards  -->
    <div class="wrapper">
        <div class="cards_wrap">
            <!-- card 1 start -->
            <div class="card_item">
                <div class="card_inner">
                    <div class="card_top" style="background-color: #ffc613;">
                        <img src="/images/b-tech.jpg" alt="car" style="height: 215px;" />
                    </div>
                    <div class="g-card" style="background-color: #ffc613;">
                        <h6 class="card-title" style="color: black;">B.Tech</h6>

                        <div class="row">
                            <div class="b-tech">
                                <p class="lead">B.Tech is a professional undergraduate engineering degree</p>

                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-6 my-4">
                                <% if(b){%>
                                    <a href="/DisplayCourse"> <button class="join button1">Display</button></a>
                                    <% }else{ %>
                                        <a href="/course_form"> <button class="join button1">Register</button></a>                                      
                                        <% }%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- card 1 end -->

            <!-- card 2 start -->
            <div class="card_item">
                <div class="card_inner">
                    <div class="card_top" style="background-color: #ffc613;">
                        <img src="/images/m-tech.jpg" alt="car" style="height: 215px;" />
                    </div>
                    <div class="g-card2" style="background-color: #ffc613;">
                        <h6 class="card-title" style="color: black;">M.Tech</h6>

                        <div class="row">
                            <div class="m-tech">
                                <p class="lead">M.Tech is a post-graduation degree in
                                    engineering</p>

                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-6 my-4">
                                <% if(m){%>
                                    <a href="/DisplayCourse"> <button class="join button1">Display</button></a>
                                    <% }else{ %>
                                        <a href="/course_form2"> <button class="join button1">Register</button></a>
                                        <% }%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- card 2 end -->

            <!-- card 3 start -->
            <div class="card_item">
                <div class="card_inner">
                    <div class="card_top" style="background-color: #ffc613;">
                        <img src="/images/mba.webp" alt="car" style="height: 215px;" />
                    </div>
                    <div class="g-card2" style="background-color: #ffc613;">
                        <h6 class="card-title" style="color: black;">MBA</h6>

                        <div class="row">
                            <div class="mba">
                                <p class="lead">MBA is a post-graduation degree in
                                    management</p>

                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-6 my-4">
                                <% if(mb){%>
                                    <a href="/DisplayCourse"> <button class="join button1">Display</button></a>
                                    <% }else{ %>
                                        <a href="/course_form3"> <button class="join button1">Register</button></a>
                                        <% }%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- card 3 end -->


        </div>
    </div>

    <!-- cards end  -->

    <%- include('../footer.ejs') %>