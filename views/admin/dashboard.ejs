<%- include('../header.ejs') %>

    <br><br>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="alert-course alert-success text-center">DISPLAY REGISTERED USERS</h3>

                <div id="collapse1">
                    <table class="table table-striped table-info">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
    
                            </tr>
                        </thead>
                        <tbody>
    
    
                            <% var i=1 %>
    
                                <% data.forEach((item)=>{ %>
                                    <tr>
                                        <td>
                                            <%= i++ %>
                                        </td>
                                        <td>
                                            <%= item.username %>
                                        </td>
                                        <td>
                                            <%= item.email %>
                                        </td>
    
                                    </tr>
                                    <% })%>
                        </tbody>
                    </table>
                </div>

                <center>
                    <a href="/course" class="btn btn-course btn-warning">Back To Home</a>&nbsp;&nbsp;
                    <a class="btn btn-course btn-danger" href="/DisplayData/<%= data._id %>">User Details
                    </a>
                </center>
                <br>
            </div>
        </div>

    </div>




    <%- include('../footer.ejs') %>