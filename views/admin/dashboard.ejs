<%- include('../header.ejs') %>

    <br><br><br><br>
    <center>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h3 style="width: 40%;" class="alert-course alert-success text-center">DISPLAY USERS</h3>
    
                    <table style="width: 40%;" class="table table-striped  table-responsive table-info">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                
                            </tr>
                        </thead>
                        <tbody>
    
    
                            <% var i=1 %>
    
                                <% data.forEach((item)=>{ %>
                                    <tr>
                                        <td>
                                            <%= i++ %>
                                        </td>
                                        <td>
                                            <%= item.username %>
                                        </td>
                                        <td>
                                            <%= item.email %>
                                        </td>
                                        
                                    </tr>
                                    <% })%>
                        </tbody>
                    </table>
    
                    <center>
                        <a href="/course" class="btn-course btn-warning">Back To Home</a>&nbsp;&nbsp;
                        <a class="btn-course btn-danger" href="/DisplayData/<%= data._id %>">User Details
                        </a>
                    </center>
                    <br>
                </div>
            </div>
        </div>
    </center>

    <%- include('../footer.ejs') %>