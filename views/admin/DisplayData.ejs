<%- include('../header.ejs') %>

    <br><br>
    <center>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="alert-course alert-success text-center">DISPLAY DATA</h3>

                    <table class="table table-striped  table-responsive table-info">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Username</th>
                                <th scope="col">Course</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>


                            <% var i=1 %>

                                <% data.forEach((item)=>{ %>
                                    <tr>
                                        <td>
                                            <%= i++ %>
                                        </td>
                                        <td>
                                            <%= item.username %>
                                        </td>
                                        <td>
                                            <%= item.course %>
                                        </td>
                                        <td>
                                            <a class="btn btn-info btn-sm action-btn"
                                                href="/ViewData/<%= item._id %>"><i class="fa-solid fa-eye"></i>
                                            </a>&nbsp;
                                            <a class="btn btn-danger btn-sm action-btn"
                                                href="/DeleteData/<%= item._id %>"><i class="fa-solid fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% })%>
                        </tbody>
                    </table>

                    <center>
                        <a href="/dashboard" class="btn btn-course btn-warning">Back To Admin Dashboard</a>
                    </center>
                    <br>
                </div>
            </div>
        </div>
    </center>

    <%- include('../footer.ejs') %>